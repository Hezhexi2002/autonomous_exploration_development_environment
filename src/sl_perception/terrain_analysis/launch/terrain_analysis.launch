<launch>
  <arg name="namespace" default="" />

  <arg name="sensorOffsetX" default="0.15"/>
  <arg name="sensorOffsetY" default="0.0"/>
  <arg name="cameraOffsetZ" default="0.0"/>

  <node pkg="terrain_analysis" exec="terrainAnalysis" name="terrainAnalysis" output="screen" namespace="$(var namespace)">
    <param name="vehicleLength" value="0.2" />
    <param name="vehicleWidth" value="0.2" />
    <param name="scanVoxelSize" value="0.05" />
    <param name="terrainVoxelSize" value="1.0" />
    <param name="decayTime" value="2.0" />
    <param name="noDecayDis" value="2.0" />
    <param name="clearingDis" value="4.0" />
    <param name="useSorting" value="true" />
    <param name="quantileZ" value="0.25" />
    <param name="considerDrop" value="false" />
    <param name="limitGroundLift" value="false" />
    <param name="maxGroundLift" value="0.15" />
    <param name="clearDyObs" value="true" />
    <param name="minDyObsDis" value="0.3" />
    <param name="minDyObsAngle" value="0.0" />
    <param name="minDyObsRelZ" value="-0.5" />
    <param name="absDyObsRelZThre" value="0.2" />
    <param name="minDyObsVFOV" value="-16.0" />
    <param name="maxDyObsVFOV" value="16.0" />
    <param name="minDyObsPointNum" value="1" />
    <param name="noDataObstacle" value="false" />
    <param name="noDataBlockSkipNum" value="0" />
    <param name="minBlockPointNum" value="10" />
    <param name="vehicleHeight" value="0.15" />
    <param name="voxelPointUpdateThre" value="100" />
    <param name="voxelTimeUpdateThre" value="2.0" />
    <param name="minRelZ" value="-0.15" />
    <param name="maxRelZ" value="0.15" />
    <param name="disRatioZ" value="0.2" />
  </node>
  
  <node pkg="tf2_ros" exec="static_transform_publisher" name="vehicleTransPublisher" args="$(var sensorOffsetX) -$(var sensorOffsetY) 0 0 0 0 /sensor /vehicle"/>
  <node pkg="tf2_ros" exec="static_transform_publisher" name="sensorTransPublisher" args="0 0 $(var cameraOffsetZ) -1.5707963 0 -1.5707963 /sensor /camera"/>
</launch>